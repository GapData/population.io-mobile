body > header
  background rgba(255,255,255,1)
  position fixed
  z-index 10
  top 0
  left 0
  right 0
  box-sizing border-box
  overflow hidden
  .animate.ng-hide-add,
  .animate.ng-hide-remove
    transition all ease 250ms
    display block !important
  .animate.ng-hide-add.ng-hide-add-active,
  .animate.ng-hide-remove
    transform translate3d(0,80px,0)
  .animate.ng-hide-add,
  .animate.ng-hide-remove.ng-hide-remove-active
    transform translate3d(0,0,0)
  .container
    clearfix()
    border-bottom 1px solid border-color
    height 80px
    box-sizing border-box
    padding 30px 0 0 0
  .world-population
    float right
    line-height 40px
    border 1px solid border-color
    padding 0 20px 0 105px
    border-radius 5px
    font-size 18px
    margin 0 10px
    color #666666
    position relative
    overflow hidden
    .toggle
      position absolute
      left 0
      top 0
      bottom 0
      height auto
    label
      position relative
      border-top none !important
      border-bottom none !important
      border-left none !important
      border-right 1px solid border-color !important
      border-radius 0 !important
    label.active
      background-color highlight-yellow
    .icon-world
      background-icon()
      background-position -130px -230px
    .icon-gender:before
      content ''
      position absolute
      left 0
      top 0
      bottom 0
      right 0
      opacity 0.8
    .icon-male:before
      background-icon()
      background-position -130px -330px
    .icon-female:before
      background-icon()
      background-position -30px -330px
  .profile
    float right
    line-height 40px
    border-radius 5px
    font-size 14px
    padding 0 20px
    margin 0 10px
    background highlight-yellow
    border 1px solid highlight-yellow
    color #333333
    cursor pointer
  .logo
    float left
    bottom 5px
    position relative
    .icon-alpha
      background-icon()
      height 50px
      width 80px
      display inline-block
      background-position -305px -30px
      vertical-align middle
    a
      display block
      line-height 40px
      font-weight 200
      font-size 30px
      cursor pointer
  ul.link-list
    float right
    a
      font-size 14px
      display block
      cursor pointer
      float left
      line-height 40px
      padding 0 20px 0 20px