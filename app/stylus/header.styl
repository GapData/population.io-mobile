body > header
  background rgba(255,255,255,1)
  position fixed
  z-index 10
  top 0
  width 100%
  overflow hidden
  .animate.ng-hide-add,
  .animate.ng-hide-remove
    transition all ease 250ms
    display block !important
  .animate.ng-hide-add.ng-hide-add-active,
  .animate.ng-hide-remove
    transform translate3d(0,80px,0)
  .animate.ng-hide-add,
  .animate.ng-hide-remove.ng-hide-remove-active
    transform translate3d(0,0,0)
  .container
    clearfix()
    border-bottom 1px solid border-color
    height 80px
    box-sizing border-box
    padding 30px 0 0 0
  .world-population
    float right
    line-height 40px
    border 1px solid border-color
    padding 0 20px 0 45px
    border-radius 5px
    font-size 18px
    margin 0 10px
    color #666666
    position relative
  .world-population:before
    content ''
    position absolute
    left 20px
    top 10px
    height 20px
    width 20px
    background-icon()
    background-position -140px -240px
  .profile
    float right
    line-height 40px
    border-radius 5px
    font-size 14px
    padding 0 20px
    margin 0 10px
    background highlight-yellow
    border 1px solid highlight-yellow
    color #333333
    cursor pointer
  .logo
    a
      display block
      float left
      line-height 40px
      font-weight 200
      font-size 30px
  ul.link-list
    float right
    a
      font-size 14px
      display block
      cursor pointer
      float left
      line-height 40px
      padding 0 20px 0 20px