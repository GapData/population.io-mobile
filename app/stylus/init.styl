body
  color #333
  padding 0
  margin 0
  font-family 'helvetica neue', 'Helvetica', sans-serif

ul
li
  list-style-type none
  margin 0
  padding 0
svg
  display block
  margin 0
  padding 0
h1, h2, h3, h4, h5, h6, p
  margin 0
  padding 0

h1
  font-size 2em
  color h1-color
  font-size 36px
  line-height 1.2em
  font-family 'sans-serif'
  font-weight normal
  span
    color h1-span-color

h2
  font-size 18px
  font-weight normal
  color #666666
  padding-left 30px
  position relative
  margin 50px 0
h2:before
  content ''
  position absolute
  left 0
  top 50%
  margin-top -4px
  width 8px
  height 8px
  border-radius 5px
  background #333

a
  text-decoration none
  color #222

section
  width container-width
  max-width container-max-width
  margin 0 auto
svg.defs-area
  display none