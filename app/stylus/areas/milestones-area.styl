.container
  display: inline-block;
  .milestones-area
    .rank
      padding 0 15px
      border-bottom 10px solid $color4
      margin 0 -15px
      h3
        color $color2
        font-size 23px;
        font-family $font1
        font-weight normal
        padding 30px 0 20px
        line-height 1.2em

    .timeline
      ul
        li
          clear both
          float left
          width 100%
          background-color $color5
          margin 0px -15px
          padding 10px 15px
          display block
          milestone
            width 43%
            float left

            @media only screen and (max-width: 769px) and (orientation: landscape)
              width 30%

            .time
              fill $color3
            .title
              font-family $font2
              sup
                vertical-align super
                font-size 14px
                color $color2
              .fontgrey
                color $color2
            circle
              fill $color1
              stroke $color5
            circle:last-child
              fill #63f
              r 4
          p
            font-family $font2
            width 48%
            float left
            margin-top 12%
            color $color2
            font-size 15px

            @media only screen and (max-width: 769px) and (orientation: landscape)
              margin-top 40px
              width 65%

            .black
              font-size 17px
              color $color1
              font-weight bold
            sup
              vertical-align super
              font-size 14px

        li:nth-child(2n)
          clear both
          float left
          width 100%
          background-color $color4
          margin 0 -15px
          padding 10px 15px
          display block
          milestone
            .time
              fill $color3
            .title
              font-family $font2

            circle
              fill $color1
              stroke $color4
            circle:last-child
              fill #63f
              r 4

    .icalDownloadImg
      display inline-block
      width 7%
      height auto
      float left
      margin-top 12%
      margin-left 2%
      @media only screen and (max-width: 769px) and (orientation: landscape)
        width 5%
        margin-top 35px
        margin-left 0px

    .arc
      fill $color1
