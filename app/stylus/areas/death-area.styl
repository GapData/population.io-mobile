#death-area
  min-height calc(100vh)
.death-area
    h3
      color $color2
      font-size 22px
      font-family $font1
      font-weight normal
      padding 10px 0 20px
      line-height 1.2em

      @media only screen and (max-width: 769px) and (orientation: landscape)
        font-size 20px

      ul
        padding 10px 0px 0px
        display inline-table
        li
          padding 0px !important
          width auto !important
        .green
          font-size 21px
          margin-bottom -5px
        .blue
          font-size 21px
          margin-bottom -5px
        :first-child
          font-family $font4

          @media only screen and (max-width: 769px) and (orientation: landscape)
            font-size 20px

        .f-lighter
          font-size 13px
      span
        padding 7px 5px 0px 0px
        display inline-block
        vertical-align: top;
death-chart
  svg
    margin 0px 0px 0px
    padding: 0px 0px 15px
  path.spiral
    fill none
    stroke $color3
    stroke-width 3px

  path.spiral2
    fill none
    stroke $active-blue
    stroke-width 3px

  path.spiralNow
    fill none
    stroke none

  path.spiralLabel
    fill none
    stroke none
