.expectancy-area
  height 900px
  angucomplete
    .form-control
      outline 0
      border 1px solid border-color
      background-color #ffffff
      padding 10px 12px
      border-radius 4px
      font-size 14px
      width 200px
    .angucomplete-holder
      position relative
      box-siting border-box
    .angucomplete-dropdown
      border 1px solid border-color
      cursor pointer
      z-index 9999
      position absolute
      border-radius 4px
      top 43px
      left 0px
      right 0px
      box-shadow 0 1px 1px rgba(0,0,0,0.2)
      background-color #ffffff
    .angucomplete-searching
      color border-color
      font-size 14px
      padding 10px 12px
    .angucomplete-row
      padding 10px 12px
      color p-color
      font-size 14px
    .angucomplete-selected-row,
    .angucomplete-row:hover
      background-color highlight-yellow
    &.rel .angucomplete-selected-row,
    &.rel .angucomplete-row:hover
      background-color highlight-blue
  .country-selection
    margin 10px 0
    padding 10px 0
    width 70%
    border-right 1px solid border-color
    .icon,
    angucomplete,
    label
      display inline-block
      margin-right 20px
    label
      color p-color
      font-size 14px
    .icon
      border-radius 20px
      height 40px
      width 40px
      line-height 40px
      vertical-align middle
      background #333