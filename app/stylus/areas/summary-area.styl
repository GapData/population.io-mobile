.summary-area
    height 100%
    summary-chart
        display block
        height 100%
        width 100%
        overflow hidden
        .domain
            fill transparent
        .axis
            .tick
                opacity 0
                line
                    fill transparent
                text
                    fill $color2
                    font-size 12px
        .x-label
        .y-label
            fill $color2
            font-size 12px
    h3
        color $color2
        font-size 25px;
        font-family $font2
        font-weight normal
        padding 30px 0
        line-height 1.2em
        span
          color #222


    .region-switcher
        border 1px solid rgba(0, 0, 0, 0.2)
        clearfix()
        width 300px
        margin 0 auto
        border-radius 4px
        span
            cursor pointer
            box-sizing border-box
            width 150px
            display block
            float left
            text-align center
            white-space: nowrap;
            overflow: hidden;
            line-height: 40px;
            text-overflow: ellipsis;
            padding: 0 15px;
            &:nth-child(2)
                border-left 1px solid rgba(0, 0, 0, 0.2)
            &.active
                background highlight-yellow
    .younger-you-older-section
        margin 70px 0
        clearfix()
        .you-column
            float left
            width 20%
            text-align center
            color #999
            font-weight 100
            line-height 1.3
            .icon
                text-align center
                svg
                    display inline
            span
                color #222
                font-weight 500
        .younger-column
        .older-column
            width 40%
            float left
            text-align center
            .number
                margin-top 37px
                font-family 'PlantinMTStd-Light', sans-serif
                font-size 48px
            .label
                color #999
                font-weight 100
.green
  color $color3 !important
.green-light
  color highlight-yellow !important

