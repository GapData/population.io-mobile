.chart-tooltip
    background: rgba(0, 0, 0, 0.8)
    color #eee
    border-radius: 0;
    padding: 20px;
    height: auto;
    width: 160px;
    position: absolute;
    left 0
    top 0
    z-index 2000
    display none
    pointer-events none
    &:before
        content: '';
        width: 0;
        height: 0;
        border-style: solid;
        border-width: 10px 10px 0 10px;
        border-color: rgba(0, 0, 0, 0.8) transparent transparent transparent;
        position: absolute;
        left: 50%;
        bottom: -10px;
        margin-left: -10px;
    &:after
        content ''
        position absolute
        display block
        width 4px
        height 205px
        left 50%
        margin-left -2px
        top 135px
        background rgba(0, 0, 0, 0.2)
    p
        overflow: hidden
        font-size 9pt
        line-height 1.5

        &.tooltip-title
            font-weight: bold;
            line-height 3

        span.tooltip-label
            font-weight: normal;
            float: left;
        span.tooltip-value
            font-weight: bold;
            float: right;
        &:last-child
            margin: 0;
