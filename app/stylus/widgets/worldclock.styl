world-clock
  display block
  position relative
  h3
    font-weight normal
    font-size 18px
    line-height 1.1em
    position absolute
    color #666666
    bottom 30px
  clearfix()
  .digit
  .placeholder
    text
      fill #666
      font-weight 300
      font-size 20px
      text-anchor middle
  .counter
    transform translate(160px, 110px)
    text
      font-size 48px
