world-clock
  display block
  position relative
  h3
    font-weight normal
    font-size 18px
    line-height 1.1em
    position absolute
    color #666666
    bottom 90px
  clearfix()
  .digit
  .placeholder
    text
      fill #666
      font-weight 300
      font-size 20px
      text-anchor middle
  .counter
    text
      font-size 48px
  .country-title
    font-size 16px
    fill #555
    text-anchor middle
