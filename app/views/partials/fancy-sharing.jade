.container
  .fancy-sharing
    .share-btns      
      a#share-twitter(target="_blank", share="twitter", share-title="population.io")
        .icon-twitter
        span(translate="SHARING_TWITTER")
      a#share-facebook(target="_blank", share="facebook", share-title="population.io")    
        .icon-facebook
        span(translate="SHARING_FACEBOOK")
      a#share-linkedin(target="_blank", share="linkedin", share-title="population.io")
        .icon-linkedin
        span(translate="SHARING_LINKEDIN")
      #share-cal
        form(name="createicaldownload", novalidate)
          .icon-calendar(ng-click="createical()", type="button",ng-disabled="createicaldownload.$invalid")
        span(translate="SHARING_CALENDAR")
    .tell-your-friend
      form(name="tellYourFriend", novalidate)
        p(translate="SHARING_TO_A_FRIEND_P1")
        input.form-control(type="text", name="friendemail", id="inputEmail", placeholder="friend@email.com", ng-model="friendemail", required)
        p(translate="SHARING_TO_A_FRIEND_P2")
        input.form-control(type="text", name="name" id="inputName",placeholder="my name", ng-model="name",required)
        button.btn(type="button",ng-click="inviteMail()",ng-disabled="tellYourFriend.$invalid",translate="SHARING_SEND")
    .birthdayreminder
        p(translate="SHARING_UPDATE")
        form.form-inline(name="emailForm", novalidate, method="POST", target="_blank",
        action="//population.us13.list-manage.com/subscribe/post?u=3840f1496862a7a719676d23a&id=5c4e95f695")
            div(style="position: absolute; left: -5000px;", aria-hidden="true")
                input(type="text", name="b_3840f1496862a7a719676d23a_5c4e95f695" tabindex="-1" value="")
            input.form-control(
            type="email",
            name="EMAIL"
            placeholder="my@email.com",
            required
            )
            button.btn(
            type="submit",
            ng-disabled="emailForm.$invalid"
            ) {{ 'SHARING_SEND' | translate }}
footer
  .container
    .block(ng-show="carouselIndex == 0 || carouselIndex == 7")
      span visit <a href="http://population.io">www.population.io</a>
include ../partials/modals
