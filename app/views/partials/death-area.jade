.container
    .death-area
        header
            h1 {{ 'DEATH_INTRO' | translate }}
        .type-switcher
            span(ng-class='{active:type=="distribution"}', ng-click='type="distribution"') {{ 'DEATH_MORTALITY_DISTRIBUTION' | translate }}
            span(ng-class='{active:type=="chances"}', ng-click='type="chances"') {{ 'DEATH_CHANCES_OF_DYING' | translate }}

        death-chart
        h2 {{ 'DEATH_EXPECTANCY_TITLE' | translate }}
        .death-stats
            .column
                .content
                    .title.world {{dodWorld}}
                    .copy {{ 'DEATH_EXPECTANCY_TXT_WORLD' | translate }}
            .column
                .content
                    .title {{differenceInDays}}
                    .copy {{ 'DEATH_EXPECTANCY_TXT_DIFFERENCE' | translate }}
            .column
                .content
                    .title.country {{dodCountry}}
                    .copy {{ 'DEATH_EXPECTANCY_TXT_COUNTRY' | translate }}
