.container
  .story-area
    header
      h1 What are the milestones to expect in your life? On $date youâ€™ll be person 3 Billion to be alive in the world. You will die on $date2.
    div.rank
      h2 Rank
      .global-rank
        rank-graph(country="ALL", data="globalRankData")
        .title Your global rank
        .value {{rankGlobal | number:0 }}
      .local-rank
        rank-graph(country="{{countryLocal}}", data="localRankData")
        .title Your rank in {{country}}
        .value {{rankLocal | number:0 }}

    div.timeline
      h2 Timeline
      ul
        li(ng-repeat="item in storyLineData | orderBy: '-year'",
          data-id="item.year",
          ng-class="{'now': item.now, 'past': item.year < year, 'selected': selectedYear === item.year}",
          ng-mouseover="highlightStoryLine(item.year)",
          ng-mouseout="highlightStoryLine()")
          span.time
            span.date {{item.date | date: 'dd MMM' }}
            span.year {{item.date | date: 'yyyy' }}
          span.title {{item.title}}
      story-line(data="storyLineData", selected-year="selectedYear")

