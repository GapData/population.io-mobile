extends ../layouts/default
block content
  svg.defs-area
    defs
      include ../../../assets/shapes-01.svg
      include ../../../assets/shapes-02.svg
      include ../../../assets/shapes-03.svg
      include ../../../assets/shapes-04.svg
      include ../../../assets/shapes-05.svg
      include ../../../assets/shapes-05-large.svg
      include ../../../assets/storyline.svg
  .share.animate(ng-show="profile.active")
    a(ng-href="{{shareUrl}}", ng-click="share()") SHARE
  one-page-scroll
    div.section(data-anchor="stats")
      section(ng-controller='StatsCtrl', stats-area)
    div.section(data-anchor="people")
      section(ng-controller='PeopleCtrl', people-area)
    div.section(data-anchor="story")
      section(ng-controller='StoryCtrl', story-area)
    div.section(data-anchor="birthdays")
      section(ng-controller='BirthdaysCtrl', birthdays-area)
    div.section(data-anchor="expectancy")
      section(ng-controller='ExpectancyCtrl', expectancy-area)
      include ../layouts/footer